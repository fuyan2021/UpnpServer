apply plugin: 'com.android.application'
//apply plugin: 'org.jetbrains.kotlin.android'
Properties properties = new Properties()
properties.load(project.rootProject.file('local.properties').newDataInputStream())
def keystoreFilepath = properties.getProperty("storeFile")
def keystorePassword = properties.getProperty("storePassword")
def alias = properties.getProperty("keyAlias")
def aliasPassword = properties.getProperty("keyPassword")
def keyStoreFile = file(keystoreFilepath)

android {
    signingConfigs {
        release {
            keyAlias alias
            keyPassword aliasPassword
            storeFile keyStoreFile
            storePassword keystorePassword
        }
        debug {
            keyAlias alias
            keyPassword aliasPassword
            storeFile keyStoreFile
            storePassword keystorePassword
        }
    }
    compileSdkVersion 33

    defaultConfig {
        applicationId "com.zxt.dlna"
        minSdkVersion 21
        targetSdkVersion 33
    }

    buildTypes {
        release {
            minifyEnabled false
            proguardFiles getDefaultProguardFile('proguard-android-optimize.txt'), 'proguard-rules.pro'
            debuggable true
            if (keyStoreFile) {
                signingConfig signingConfigs.release
            }
        }
    }
}

dependencies {
    implementation project(":upnpserver")
    implementation 'com.squareup.okhttp3:okhttp:4.9.1'
    implementation 'com.android.support:appcompat-v7:22.2.0'
    implementation 'com.android.support:design:22.2.0'
    implementation 'com.android.support:cardview-v7:22.2.0'
    implementation 'com.android.support:recyclerview-v7:22.2.0'
    implementation 'com.google.code.gson:gson:2.10.1'
    testImplementation 'junit:junit:4.12'
    testImplementation 'org.mockito:mockito-core:1.10.19'
}
